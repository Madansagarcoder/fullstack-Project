<% layout("/layouts/boilerplate") %>

    <div class="d-flex justify-content-center align-items-center min-vh-0 mb-3">
    <div class="p-5 mt-5 bg-white rounded-3 shadow-lg" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">Login</h2>
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">UserName</label>
                <input type="text"
                       class="form-control rounded-pill"
                       id="username"
                       name="username"
                       placeholder="Enter UserName"
                       required>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password"
                       class="form-control rounded-pill"
                       id="password"
                       name="password"
                       placeholder="Enter Password"
                       required>
            </div>

            <button type="submit" 
                    class="btn btn-dark w-100 rounded-pill shadow-sm mt-3">
                Login
            </button>
        </form>
        <p class="mt-3 text-center">Don't have an account? <a href="/signup">Sign up</a></p>
    </div>
</div>