 <% layout("/layouts/boilerplate") %>

    <div class="d-flex justify-content-center align-items-start mt-4 mt-sm-2 mb-2 px-3">
      <div class="w-100 col-12 col-sm-11 col-md-8 col-lg-6 col-xl-5 px-4 bg-white rounded-3 shadow-lg p-4">
        <h2 class=" text-center text-2xl font-bold mt-2"><u>Create A new Listing</u></h2>

            <form method="POST" action="/listings" enctype="multipart/form-data" novalidate class="needs-validation" >
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" class="form-control" name="listing[title]" placeholder="enter title"
                     required>
                      <div class="valid-feedback">valid Name</div>
                </div>

               
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="listing[description]" class="form-control" id=""
                     required></textarea>

                </div>

 
                 <div class="mb-3">
                    <label for="image" class="form-lable">Upload Image</label>
                    <input type="file" 
                    name="listing[image]" 
                   class ="form-control" 
                  required
                   >
                   
                </div>
                


                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input type="" class="form-control" name="listing[price]" placeholder="enter price"
                            required>
                    <div class="valid-feedback">Please Enter a valid</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" class="form-control" name="listing[country]" placeholder="enter country"
                            required>
                     <div class="valid-feedback">valid Country</div>


                    </div>
                </div>




                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input type="text" class="form-control" name="listing[location]" placeholder="enter location"
                        required>
                </div>

                <br><br>
                <button class="btn btn-dark">Add</button>


                <br><br>


            </form>
        </div>
    </div> 
    