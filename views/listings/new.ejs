 <% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create A new Listing</h3>
            <form method="POST" action="/listings" enctype="multipart/form-data" novalidate class="needs-validation" >
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" class="form-control" name="listing[title]" placeholder="enter title"
                     required>
                      <div class="valid-feedback">valid Name</div>
                </div>

               
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="listing[description]" class="form-control" id=""
                     required></textarea>

                </div>


                <!-- <div class="mb-3">
                    <label for="image" class="form-lable">Image</label>
                    <input type="text" name="listing[image][filename]" class="form-control" placeholder="enter URL?Link">
                </div> -->

                 <div class="mb-3">
                    <label for="image" class="form-lable">Upload Image</label>
                    <input type="file" 
                    name="image" 
                   class ="form-control" 
                   required
                   >
                   
                </div>


                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input type="" class="form-control" name="listing[price]" placeholder="enter price"
                            required>
                    <div class="valid-feedback">Please Enter a valid</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" class="form-control" name="listing[country]" placeholder="enter country"
                            required>
                     <div class="valid-feedback">valid Country</div>


                    </div>
                </div>




                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input type="text" class="form-control" name="listing[location]" placeholder="enter location"
                        required>
                </div>

                <br><br>
                <button class="btn btn-dark">Add</button>


                <br><br>


            </form>
        </div>
    </div> 
    