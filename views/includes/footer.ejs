</style>

<!-- JS -->



<script>

  
const footerLinks = document.querySelectorAll('.hover-card');
const popupCard = document.getElementById('footer-card');
const popupBody = document.getElementById('footer-card-body');

footerLinks.forEach(link => {
    link.addEventListener('click', (e) => {
        e.preventDefault();
        showCard(link);
    });
});

function showCard(link) {
    const type = link.getAttribute('data-card');
    popupBody.innerHTML = getFooterCardContent(type);
    popupCard.style.display = 'block';
    setTimeout(()=> popupCard.classList.add('show'), 10);

    const rect = link.getBoundingClientRect();
    popupCard.style.top = (rect.bottom + window.scrollY + 8) + 'px';
    popupCard.style.left = (rect.left + window.scrollX) + 'px';
}

function closeFooterCard() {
    popupCard.classList.remove('show');
    setTimeout(()=> popupCard.style.display='none', 300);
}

function getFooterCardContent(type) {
    switch(type) {
        // Support
        case 'help':
            return `<h6>Help Centre</h6>
                <ul>
                  <li>Emergency: 112</li>
                  <li>Tourist Assistance: 1800-123-456</li>
                  <li>Consumer Helpline: 1800-11-4000</li>
                </ul>`;
        case 'safety':
            return `<h6>Safety Guidelines</h6>
                <ul>
                  <li>Always verify the host identity.</li>
                  <li>Meet in public places if possible.</li>
                  <li>Report suspicious activity immediately.</li>
                  <li>Use secure payment methods only.</li>
                </ul>`;
        case 'disability':
            return `<h6>Disability Support</h6>
                <p>Accessible listings are clearly marked. Contact: <a href="mailto:support@example.com">support@example.com</a></p>`;
        case 'cancellation':
            return `<h6>Cancellation Options</h6>
                <form action="/send-cancellation-email" method="POST">
                    <input type="email" name="email" placeholder="Your email" required>
                    <textarea name="message" rows="3" placeholder="Write your cancellation request" required></textarea>
                    <button type="submit">Send Request</button>
                </form>`;
        case 'report':
            return `<h6>Report Neighbourhood Concern</h6>
                <form action="mailto:yourpersonalemail@example.com" method="POST" enctype="text/plain">
                    <textarea name="issue" rows="3" placeholder="Describe your concern" required></textarea>
                    <button type="submit">Send Report</button>
                </form>`;

        // Hosting
        case 'retreat-home':
            return `<h6>Retreat Your Home</h6>
                    <p>Add your home as a listing, set pricing, availability, and manage bookings easily.</p>`;
        case 'retreat-experience':
            return `<h6>Retreat Your Experience</h6>
                    <p>Create unique experiences like workshops, tours, or local activities. Showcase them to attract guests.</p>`;
        case 'hosting-resources':
            return `<h6>Hosting Resources</h6>
                    <p>Step-by-step guides for adding listings, managing availability, pricing, photos, and guest communication.</p>`;
        case 'hosting-class':
            return `<h6>Join a Free Hosting Class</h6>
                    <p>Learn basics online, attend workshops, tips for guest satisfaction, safety, and certification.</p>`;

        // Retreat
        case 'summer-release':
            return `<h6>2025 Summer Release</h6>
                    <p>Search listings by year and explore new releases and features.</p>`;
        case 'newsroom':
            return `<h6>Newsroom</h6>
                    <p>Latest updates, announcements, and monthly listing news.</p>`;
        case 'emergency-stays':
            return `<h6>Retreat.org Emergency Stays</h6>
                    <p>Quick emergency booking options for urgent needs and assistance.</p>`;

        default:
            return `<p>No info available</p>`;
    }
}
</script>
