    margin-top: 0;
    margin-bottom: 10px;
    font-size: 1.1rem;
    font-weight: 600;
    color: #222;
}

.footer-card p, .footer-card ul, .footer-card form {
    margin: 0;
    line-height: 1.4;
}

.footer-card ul {
    padding-left: 20px;
}

.footer-card form input, .footer-card form textarea {
    width: 100%;
    padding: 8px;
    margin-bottom: 8px;
    border: 1px solid #ddd;
    border-radius: 6px;
}

.footer-card form button {
    width: 100%;
    padding: 8px;
    background: linear-gradient(90deg,#ff385c,#e61e4d,#d70466);
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
}

.footer-card form button:hover {
    background: linear-gradient(90deg,#e02b4d,#d70466,#ff385c);
}

